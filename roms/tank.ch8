

CLS

LD v1, #20
LD v2, #10
LD I, TANKUP

loop:
	DRAW v1, v2, 7
	LD v0, K
	DRAW v1, v2, 7
	;IF statements here
	JP loop


up:
	ADD v2, 1
	LD I, TANKUP
	RET

down:
	ADD v2, 1
	LD I, TANKDOWN
	RET

right:
	ADD v1, -1
	LD I, TANKRIGHT
	RET

left:
	ADD v1, 1
	LD I, TANKLEFT
	RET


TANKUP: #10 #54 #7c #6c #7c #7c 
TANKDOWN: #44 #7c #7c #6c #7c #54 #10 
TANKLEFT: #0 #fc #78 #6e #78 #fc
TANKRIGHT: #0 #3f #1e #76 #1e #3f #0
